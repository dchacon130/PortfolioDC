---
import ContactForm from "../components/ContactForm";
import Layout from "../layouts/Layout.astro";

import "../styles/global.css";
---

<Layout>
  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold text-ebony mb-4 text-center">Contact</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="p-10">
        <h2 class="text-2xl font-semibold text-ebony mb-4">
          DO YOU HAVE A PROJECT TO DISCUSS?
        </h2>
        <h3 class="text-lg text-ebony mb-2">Get in touch:</h3>
        <p class="text-ebony mb-2">dchacon130@gmail.com</p>
        <div class="flex space-x-4 mb-6">
          <a href="#" class="text-red-orange hover:underline">LinkedIn</a>
          <a href="#" class="text-red-orange hover:underline">Instagram</a>
          <a href="#" class="text-red-orange hover:underline">Telegram</a>
          <a href="#" class="text-red-orange hover:underline">Discord</a>
        </div>
      </div>
      <ContactForm client:load />
    </div>
  </div>
</Layout>
