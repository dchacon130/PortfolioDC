---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

// layout -> display -> spacing -> border -> colors -> text
---

<Layout>
  <div class="flex flex-col items-center justify-center min-h-screen p-4">
    <div class="mb-8">
      <img
        class="max-w-full h-auto md:h-96"
        src="../../public/assets/img/diego-chacon.png"
        alt="Diego Chacon"
      />
    </div>
    <div class="text-center mb-8">
      <p class="text-lg md:text-xl text-ebony leading-relaxed">
        Software Developer with a passion for creating beautiful and quality
        applications.
      </p>
    </div>
    <div>
      <button
        class="bg-red-orange text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-orange-600 transition duration-300"
      >
        Contact!
      </button>
    </div>
  </div>
</Layout>
